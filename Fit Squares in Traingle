
import java.util.*;
import java.lang.*;
import java.io.*;

/* Name of the class has to be "Main" only if the class is public. */
class Codechef
{
    public static int fitSquares( int b){
        b=b-2;
        b=Math.floorDiv(b,2);
        return b*(b+1)/2;
    }
	public static void main (String[] args) throws java.lang.Exception
	{
		
		Scanner sc=new Scanner(System.in);
		int T=sc.nextInt();
		while(T-->0){
		    int b=sc.nextInt();
		    System.out.println(fitSquares(b));
		}
	    	
	}
}
